{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true,
    "jest": true
  },
  "rules": {
    "no-ex-assign": "error",
    "no-loop-func": "error",
    "require-jsdoc": "warn",
    "lines-between-class-members": "warn",
    "no-dupe-class-members": "error",
    "no-shadow": "error",
    "object-shorthand": "warn"
  },
  "ignorePatterns": [
    "src/autotests/**/**/*.js"
  ]
}
